; MicroLind BIOS and System Memory Map,
; Memory area: $C000 - $DFFF (8kB in Bank 4)

IO_INC EQU 1

IO_BASE EQU $F400

; -----------------------------------------------------------------
; Memory Mapper (MMU) 
; $F400 - $F403
; -----------------------------------------------------------------
MMU_BASE EQU IO_BASE+0

; -----------------------------------------------------------------
; IRQ Handler
; $F404
; -----------------------------------------------------------------
IRQ_BASE EQU IO_BASE+4

; -----------------------------------------------------------------
; Spare 1 
; $F405 - $F40F
; -----------------------------------------------------------------
SPARE_1_BASE EQU IO_BASE+5

; -----------------------------------------------------------------
; PS/2
; $F410 - $F417
; -----------------------------------------------------------------
PS2_BASE EQU IO_BASE+16
RTC_BASE EQU IO_BASE+18

; -----------------------------------------------------------------
; Compact Flash
; $F418 - $F41F
; -----------------------------------------------------------------
CF_BASE EQU IO_BASE+24

; -----------------------------------------------------------------
; Parallel (VIA)
; $F420 - $F42F
; -----------------------------------------------------------------
PARALLEL_BASE EQU IO_BASE+32

; -----------------------------------------------------------------
; Serial (XR88C92)
; $F430 - $F43F
; -----------------------------------------------------------------
SERIAL_BASE EQU IO_BASE+48

; -----------------------------------------------------------------
; Graphics
; $F440 - $F47F
; -----------------------------------------------------------------
GRAPHICS_BASE EQU IO_BASE+64

; -----------------------------------------------------------------
; Audio
; $F480 - $F4BF
; -----------------------------------------------------------------
AUDIO_BASE EQU IO_BASE+128

; -----------------------------------------------------------------
; Spare 2
; $F4C0 - $F4FF
; -----------------------------------------------------------------
SPARE_2_BASE EQU IO_BASE+192

; -----------------------------------------------------------------
; Expansion Port
; $F500 - $F7FF
; -----------------------------------------------------------------
EXPANSION_PORT_BASE EQU IO_BASE+256

