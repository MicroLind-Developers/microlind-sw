; MicroLind BIOS and System Memory Map
STACK_START     EQU     $E000
STACK_SIZE      EQU     1024

;Memory map
BIOS_MEMORY_START EQU $D800

; Expansion Driver Memory Map
; $D800 - $D81F

EXPANSION_DRIVER_MEMORY_START EQU BIOS_MEMORY_START
EXPANSION_DRIVER_MEMORY_SIZE EQU 32


; Serial Driver Memory Map
; $D820 - $D83F

SERIAL_DRIVER_MEMORY_START EQU EXPANSION_DRIVER_MEMORY_START+EXPANSION_DRIVER_MEMORY_SIZE
SERIAL_DRIVER_MEMORY_SIZE  EQU 32
SERIAL_BUFFER_START 	EQU $D000
SERIAL_BUFFER_SIZE 	EQU 1024


; Storage Driver Memory Map
; $SD840 - $D85F

STORAGE_DRIVER_MEMORY_START EQU SERIAL_DRIVER_MEMORY_START+SERIAL_DRIVER_MEMORY_SIZE
STORAGE_DRIVER_MEMORY_SIZE  EQU 32
STORAGE_BUFFER_START 	EQU $D400
STORAGE_BUFFER_SIZE 	EQU 512


; Joystick Driver Memory Map
; $D860 - $D87F
JOYSTICK_DRIVER_MEMORY_START EQU STORAGE_DRIVER_MEMORY_START+STORAGE_DRIVER_MEMORY_SIZE
JOYSTICK_DRIVER_MEMORY_SIZE  EQU 32


; Keyboard Driver Memory Map
; $D880 - $D89F
KEYBOARD_DRIVER_MEMORY_START EQU JOYSTICK_DRIVER_MEMORY_START+JOYSTICK_DRIVER_MEMORY_SIZE
KEYBOARD_DRIVER_MEMORY_SIZE  EQU 32


; Video Driver Memory Map
; $D8A0 - $D8DF

VIDEO_DRIVER_MEMORY_START EQU KEYBOARD_DRIVER_MEMORY_START+KEYBOARD_DRIVER_MEMORY_SIZE
VIDEO_DRIVER_MEMORY_SIZE  EQU 64

VIDEO_BUFFER_START 	EQU $CC00
VIDEO_BUFFER_SIZE 	EQU 1024


; Audio Driver Memory Map
; $D8E0 - $D8FF
AUDIO_DRIVER_MEMORY_START EQU VIDEO_DRIVER_MEMORY_START+VIDEO_DRIVER_MEMORY_SIZE
AUDIO_DRIVER_MEMORY_SIZE  EQU 32

AUDIO_BUFFER_START 	EQU $C800
AUDIO_BUFFER_SIZE 	EQU 1024
